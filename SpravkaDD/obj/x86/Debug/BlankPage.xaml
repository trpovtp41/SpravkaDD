<Page
    x:Class="SpravkaDD.BlankPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpravkaDD"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <StackPanel>
            <TextBlock Text="Объекты" Style="{ThemeResource HeaderTextBlockStyle}" />
            <ListView x:ConnectionId='1' x:Name="objList" IsItemClickEnabled="True"
                                                    >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}"  FontSize="26" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:ConnectionId='2' x:Name="createButton" Content="Добавить"                            />
        </StackPanel>
    </Grid>
</Page>

